{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}

    <h1> List of the Categories </h1>
    {% for category in categories %}

        {# striptags('<br>') -> Allow us to ignore the <br> tag #}
        {# raw -> The raw filter marks the value as being "safe", which means that in an environment with automatic escaping enabled this variable will not be escaped if raw is the last filter applied to it #} 
        {{category | striptags('<br>') | raw }} <br>
        <a class="btn btn-warning" href="{{path('edit_category', {'id':category.id})}}"> Edit </a>
        <a class="btn btn-danger" href="{{path('delete_category', {'id':category.id})}}"> Delete </a>
        <br>
        <br>
    {% endfor %} 
    <br>
    <button><a class="btn bg-transparent" href="{{path('add_category')}}"> Add a Category </a></button><br>

{% endblock %}
